{
  "name": "sharemyscreen-media-service",
  "version": "0.1.0",
  "private": true,
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "test": "gulp test",
    "preversion": "gulp lint && npm test",
    "version": "gulp changelog && git add CHANGELOG.md",
    "postversion": "git push origin master --tags"
  },
  "config": {
    "development": {
      "port": 5000,
      "mqMasterUri": "tcp://localhost:7777/",
      "mongoUri": "mongodb://localhost:27017/sms",
      "kurentoUri": "ws://localhost:8888/kurento"
    },
    "test": {
      "port": 5000,
      "mqMasterUri": "tcp://localhost:7777/",
      "mongoUri": "mongodb://localhost:27017/sms_media_test",
      "kurentoUri": "ws://localhost:8888/kurento"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sharemyscreen/media-service.git"
  },
  "author": "ShareMyScreen Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sharemyscreen/media-service/issues"
  },
  "homepage": "https://github.com/sharemyscreen/media-service#readme",
  "dependencies": {
    "async": "^2.0.0-rc.6",
    "axon": "^2.0.2",
    "kurento-client": "^6.5.0",
    "lodash": "^4.13.1",
    "mongoose": "^4.5.2",
    "sharemyscreen-common": "git+https://git@github.com/sharemyscreen/common.git",
    "socket.io": "^1.4.8",
    "winston": "^2.2.0"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "gulp": "^3.9.1",
    "gulp-changelogmd": "^1.0.6",
    "gulp-env": "^0.4.0",
    "gulp-istanbul": "^1.0.0",
    "gulp-mocha": "^2.2.0",
    "gulp-shell": "^0.5.2",
    "gulp-xo": "^0.12.0",
    "require-dir": "^0.3.0",
    "socket.io-client": "^1.4.8",
    "xo": "^0.16.0"
  },
  "xo": {
    "esnext": true,
    "env": [
      "mocha",
      "node"
    ],
    "rules": {
      "camelcase": [
        "error",
        {
          "properties": "never"
        }
      ],
      "babel/new-cap": 0
    }
  }
}
